---
import eventData from '../data/excel-data.json';

const info = eventData.Info;
const pageLink = info[0][6];
const seriesLink = info[1][6];
---

<section class="links-section">
  <div class="container">
    <div class="links-grid">
      <a href={pageLink} class="link-card" target="_blank" rel="noopener noreferrer">
        <div class="link-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
          </svg>
        </div>
        <h3>Event Page</h3>
        <p>Quick link to this event</p>
      </a>
      
      <a href={seriesLink} class="link-card" target="_blank" rel="noopener noreferrer">
        <div class="link-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" />
            <polyline points="3.27 6.96 12 12.01 20.73 6.96" />
            <line x1="12" y1="22.08" x2="12" y2="12" />
          </svg>
        </div>
        <h3>Series Info</h3>
        <p>Learn about the FF Relay Series</p>
      </a>
    </div>
  </div>
</section>

<style>
  .links-section {
    background: var(--color-surface);
    padding: calc(var(--spacing-unit) * 3) calc(var(--spacing-unit) * 2);
  }

  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: calc(var(--spacing-unit) * 2);
    max-width: 800px;
    margin: 0 auto;
  }

  .link-card {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    padding: calc(var(--spacing-unit) * 2);
    border-radius: 16px;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid rgba(212, 175, 55, 0.2);
    position: relative;
    overflow: hidden;
  }

  .link-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .link-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(212, 175, 55, 0.3);
    text-decoration: none;
  }

  .link-card:hover::before {
    opacity: 1;
  }

  .link-card:hover .link-icon {
    transform: scale(1.1);
  }

  .link-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto calc(var(--spacing-unit) * 1.5);
    background: var(--color-accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .link-icon svg {
    color: var(--color-primary);
  }

  .link-card h3 {
    color: var(--color-accent);
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .link-card p {
    color: var(--color-text);
    opacity: 0.8;
    margin: 0;
  }

  @media (max-width: 768px) {
    .links-grid {
      grid-template-columns: 1fr;
    }
  }
</style>