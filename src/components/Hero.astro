---
import eventData from '../data/excel-data.json';

const info = eventData.Info;
const title = info[0][0];
const dates = info[1][0];
const mainStream = info[2][0];
const japaneseStream = info[2][1];
const description = info[4][0];
---

<section class="hero">
  <div class="hero-background"></div>
  <div class="hero-content">
    <h1 class="hero-title">{title}</h1>
    <p class="hero-dates">{dates}</p>
    <p class="hero-description">{description}</p>
    
    <div class="stream-links">
      <a href={mainStream} class="stream-link main" target="_blank" rel="noopener noreferrer">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M11.571 4.714h1.715v5.143H11.57zm-4.571 0H5.286v5.143H7zm9.143 0h-1.714v5.143h1.714zM24 12.571H0V10.57h24zm-2.571 1.286h-1.714v5.143h1.714zm-4.572 0h-1.714v5.143h1.714zm-9.142 0H6v5.143h1.714zm4.571 0h-1.715v5.143h1.715z"/>
        </svg>
        Watch on Twitch
      </a>
      <a href={japaneseStream.split('\n')[1]} class="stream-link japanese" target="_blank" rel="noopener noreferrer">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M11.571 4.714h1.715v5.143H11.57zm-4.571 0H5.286v5.143H7zm9.143 0h-1.714v5.143h1.714zM24 12.571H0V10.57h24zm-2.571 1.286h-1.714v5.143h1.714zm-4.572 0h-1.714v5.143h1.714zm-9.142 0H6v5.143h1.714zm4.571 0h-1.715v5.143h1.715z"/>
        </svg>
        日本語配信
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #1a1f36 0%, #2a3f5f 50%, #1a1f36 100%);
    opacity: 0.9;
  }

  .hero-background::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 50%, rgba(212, 175, 55, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(102, 126, 234, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 50% 20%, rgba(118, 75, 162, 0.1) 0%, transparent 50%);
    animation: float 20s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.05); }
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 900px;
    padding: calc(var(--spacing-unit) * 2);
  }

  .hero-title {
    background: linear-gradient(135deg, var(--color-accent) 0%, #f4d03f 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: calc(var(--spacing-unit) * 2);
    animation: glow 3s ease-in-out infinite;
  }

  @keyframes glow {
    0%, 100% { filter: brightness(1) drop-shadow(0 0 20px rgba(212, 175, 55, 0.5)); }
    50% { filter: brightness(1.1) drop-shadow(0 0 30px rgba(212, 175, 55, 0.7)); }
  }

  .hero-dates {
    font-size: 1.5rem;
    color: var(--color-accent);
    margin-bottom: calc(var(--spacing-unit) * 2);
    font-weight: 600;
  }

  .hero-description {
    font-size: 1.25rem;
    margin-bottom: calc(var(--spacing-unit) * 3);
    opacity: 0.9;
  }

  .stream-links {
    display: flex;
    gap: calc(var(--spacing-unit) * 2);
    justify-content: center;
    flex-wrap: wrap;
  }

  .stream-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--color-accent) 0%, #f4d03f 100%);
    color: var(--color-primary);
    font-family: var(--font-display);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 50px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .stream-link::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #f4d03f 0%, var(--color-accent) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .stream-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(212, 175, 55, 0.4);
    text-decoration: none;
  }

  .stream-link:hover::before {
    opacity: 1;
  }

  .stream-link svg {
    position: relative;
    z-index: 1;
  }

  .stream-link.japanese {
    background: linear-gradient(135deg, #6B7BED 0%, #8A98F2 100%);
  }

  .stream-link.japanese::before {
    background: linear-gradient(135deg, #8A98F2 0%, #6B7BED 100%);
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-dates {
      font-size: 1.2rem;
    }

    .hero-description {
      font-size: 1.1rem;
    }

    .stream-links {
      flex-direction: column;
      align-items: center;
    }
  }
</style>